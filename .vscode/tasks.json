{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run GBA",
            "type": "shell",
            "dependsOn": ["make"],
            "group": {
                "kind": "build",
                "isDefault" : true,
            },
            "command": "\"C:/Program Files/mGBA/mGBA.exe\" ${workspaceFolder}/${workspaceFolderBasename}.gba -4"
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "make clean"
        },

        // from https://github.com/JamieDStewart/GBA_VSCode_Basic
        { 
            "label": "stop emulation",
            "type":"shell",
            "command":"taskkill /im mGBA.exe /F"
        },
        {
            "label": "make debug",
            "type": "process",
            "command": "make",
            "args": ["DEBUG=1"],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "type": "process",
            "command": "make",
            "args": ["DEBUG=0"],
            "problemMatcher": []
        },
        {
            //"dependsOn":"stop emulation",
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": ["make debug"],
            "isBackground": true,
            "windows": {
                "command": "\"C:/Program Files/mGBA/mGBA.exe\" -g ${workspaceFolder}/${workspaceFolderBasename}.gba && sleep 2 && echo debuggerReady"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "new"
            },
            "command": "debuggerReady",
            "problemMatcher": {
                "fileLocation": "relative",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*debuggerReady.*$",
                    "endsPattern": "^.*debuggerReady.*$"
                },
                "pattern": {
                    "regexp": ""
                },
            }
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "command": "C:/devkitPro/nocashgba/NO$GBA.exe ${workspaceFolder}/${workspaceFolderBasename}.elf",
            "problemMatcher": []
        }
    ]
}